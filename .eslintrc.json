{
    "env": {
        "browser": true,
        "es6": true,
        "jasmine": true,
        "serviceworker": true
    },
    "extends": ["eslint:recommended", "angular"],
    "parserOptions": {
        "sourceType": "script"
    },
    "rules": {
        "valid-jsdoc": "off",
        "curly": ["error", "all"],
        "eqeqeq": "warn",
        "no-alert": "warn",
        "no-eval": "error",
        "no-extend-native": "error",
        "no-floating-decimal": "error",
        "no-multi-spaces": "error",
        "no-multi-str": "error",
        "no-native-reassign": "error",
        "no-sequences": "error",
        "no-unused-expressions": "error",
        "no-useless-call": "warn",
        "no-useless-concat": "warn",
        "no-useless-escape": "warn",
        "no-with": "warn",
        "radix": ["error", "as-needed"],
        "vars-on-top": "off",
        "wrap-iife": ["error", "inside"],
        "strict": "error",


        "array-bracket-spacing": ["error", "never"],
        "block-spacing": "error",
        "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
        "camelcase": "error",
        "comma-dangle": "off",
        "comma-spacing": ["error", { "before": false, "after": true }],
        "computed-property-spacing": ["error", "never"],
        "eol-last": "warn",
        "indent": ["error", "tab"],
        "key-spacing": "error",
        "keyword-spacing": ["error", { "overrides": {
			"if": { "after": false },
			"switch": { "after": false },
			"for": { "after": false },
			"while": { "after": false }
		}}],
        "linebreak-style": ["error", "unix"],
        "new-cap": "error",
        "newline-before-return": "error",
        "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }],
        "no-mixed-spaces-and-tabs": "error",
        "no-spaced-func": "error",
        "no-trailing-spaces": "warn",
        "no-whitespace-before-property": "error",
        "object-property-newline": "off",
        "one-var": ["error", "never"],
        "padded-blocks": ["off", "never"],
        "quotes": ["error", "single"],
        "require-jsdoc": "warn",
        "semi": ["error", "always"],
        "semi-spacing": "error",
        "space-before-blocks": "error",
        "space-before-function-paren": ["error", "never"],
        "space-in-parens": ["error", "never"],
        "space-infix-ops": "error",
        "space-unary-ops": "error",

		"angular/controller-as": "warn",
		"angular/definedundefined": "off",
		"angular/directive-name": ["warn","bt"],
		"angular/json-functions": "off",
		"angular/typecheck-array": "off",
		"angular/typecheck-date": "off",
		"angular/typecheck-function": "off",
		"angular/typecheck-number": "off",
		"angular/typecheck-object": "off",
		"angular/typecheck-string": "off",
		"angular/window-service": "off"
    }
}
